pipeline {
    agent any

    environment {
        IMAGE_NAME = "devops-mini-project-nginx"
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME .'
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                    docker rm -f $IMAGE_NAME || true
                    docker run -d -p 8000:80 --name $IMAGE_NAME $IMAGE_NAME
                '''
            }
        }
    }
}
